{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug FastAPI App",
        "type": "debugpy",
        "request": "launch",
        "program": "main.py",
        "console": "integratedTerminal",
        "args": [
          "run",
          "--host", "0.0.0.0",
          "--port", "8000"
        ],
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "jinja": true
      }
    ]
  }
  